{
    "vaults":
    [
        {
            "name": "server",
            "type": "filesystem",
            "options":
            {
                "keys":
                {
                    "store": "localhost.p12",
                    "type": "pkcs12",
                    "password": "generated"
                }
            }
        }
    ],
    "bindings":
    [
        {
            "entry": "tcp0",
            "type" : "tcp",
            "kind": "server",
            "options":
            {
                "host": "0.0.0.0",
                "port": 23456
            },
            "exit": "tls0"
        },
        {
            "entry": "tls0",
            "type" : "tls",
            "kind": "server",
            "vault": "server",
            "options":
            {
                "keys": [ "localhost" ],
                "serverNames": [ "localhost" ],
                "alpn": [ "echo" ]
            },
            "routes":
            [
                {
                    "exit": "echo0",
                    "when":
                    [
                        {
                            "alpn": "echo"
                        }
                    ]
                }
            ]
        },
        {
            "entry": "echo0",
            "type" : "echo",
            "kind": "server"
        }
    ]
}

