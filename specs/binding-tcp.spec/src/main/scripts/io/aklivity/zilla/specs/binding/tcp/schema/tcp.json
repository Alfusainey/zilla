[
    {
        "op": "add",
        "path": "/$defs/binding/properties/type/enum/-",
        "value": "tcp"
    },
    {
        "op": "add",
        "path": "/$defs/binding/allOf/-",
        "value":
        {
            "if":
            {
                "properties":
                {
                    "type":
                    {
                        "const": "tcp"
                    }
                }
            },
            "then":
            {
                "properties":
                {
                    "kind":
                    {
                        "enum": [ "server", "client" ]
                    },
                    "options":
                    {
                        "additionalProperties": false,
                        "properties":
                        {
                            "host":
                            {
                                "title": "Host",
                                "type": "string"
                            },
                            "port":
                            {
                                "title": "Port",
                                "oneOf":
                                [
                                    {
                                        "type": "integer"
                                    },
                                    {
                                        "type": "string"
                                    },
                                    {
                                        "type": "array",
                                        "items":
                                        {
                                            "oneOf":
                                            [
                                                {
                                                    "type": "integer"
                                                },
                                                {
                                                    "type": "string"
                                                }
                                            ]
                                        }
                                    }
                                ]
                            }
                        }
                    },
                    "routes":
                    {
                        "items":
                        {
                            "properties":
                            {
                                "when":
                                {
                                    "items":
                                    {
                                        "additionalProperties": false,
                                        "properties":
                                        {
                                            "authority":
                                            {
                                                "type": "string"
                                            },
                                            "cidr":
                                            {
                                                "type": "string",
                                                "pattern": "^[0-9a-fA-F:.]+/(\\d{1,3})$"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
]
