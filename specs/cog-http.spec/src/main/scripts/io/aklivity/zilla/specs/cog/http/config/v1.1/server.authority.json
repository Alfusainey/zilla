{
    "bindings":
    [
        {
            "entry": "net#0",
            "type" : "http",
            "kind": "server",
            "options":
            {
                "versions": [ "http/1.1" ]
            },
            "routes":
            [
                {
                    "exit": "app#0",
                    "when":
                    [
                        {
                            "headers":
                            {
                                ":scheme": "https",
                                ":authority": "localhost:443"
                            }
                        }
                    ]
                }
            ]
        }
    ]
}
