connect "zilla://streams/app#0"
        option zilla:window 8192
        option zilla:transmission "half-duplex"

write zilla:begin.ext ${sse:beginEx()
                             .typeId(zilla:id("sse"))
                             .pathInfo("/events/a8b7c6d5")
                             .lastEventId(null)
                             .build()}

connected

write close

read zilla:data.ext ${zilla:id("sse")} 1519937168533L [0xfe] [0..254] [0x10] [0..16]
read "Hello, world"

read zilla:end.ext ${sse:endEx()
                          .typeId(zilla:id("sse"))
                          .id("105")
                          .build()}

read notify RECONNECT_EVENT_STREAM
read closed

connect await RECONNECT_EVENT_STREAM
        "zilla://streams/app#0"
        option zilla:window 8192
        option zilla:transmission "half-duplex"

write zilla:begin.ext ${sse:beginEx()
                             .typeId(zilla:id("sse"))
                             .pathInfo("/events/a8b7c6d5")
                             .lastEventId("105")
                             .build()}

connected

write close
